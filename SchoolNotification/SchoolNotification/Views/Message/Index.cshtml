@model IEnumerable<SchoolNotification.ViewModels.MessageBase>

@{
    ViewBag.Title = "Message Index";
}

<h2>Message Index</h2>

@*if (ViewBag.facutlyView = "Y") { 
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}*@
@if ((ViewBag.adminView == "Y") || (ViewBag.facutlyView == "Y") || (ViewBag.studentView == "Y")) 
{  
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CourseCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Time)
        </th>

        <th></th>
    </tr>

    @foreach (var item in ViewBag.msglist)
    {
        <tr>
            <td>
                @item.CourseCode
            </td>
            <td>
                @item.Date
            </td>
            <td>
                @item.Time
            </td>
            @if (ViewBag.facutlyView == "Y") {
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
            }
            else
            {
            <td>
                @Html.ActionLink("Details", "Details", new { id=item.Id }) 
            </td>
            }
        </tr>
    }

</table>
    <p>@Html.ActionLink("Back to Cancellation List", "Index", "Cancellation")</p>
}
else {
    <p>You are not authorized to view message list.</p>
}